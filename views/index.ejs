<!DOCTYPE html>
<html lang="en">
  <link>
    <title>Sliepov Oleksii Lab</title>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
  </head>
  <body>
    <%- include('navbar.ejs') %>
    <br />
    <div class="container">  
      <h1>Książki</h1>
      
      <div class="row g-5">
        <div class="col-md-6">
          <table class="table">
            <thead>
              <tr>
                <th scope="col">#</th>
                <th scope="col">Nazwa książki</th>
                <th scope="col">Autor</th>
                <th scope="col">Operacji</th>
              </tr>
            </thead>
            <tbody>
              <% for (var i = 0; i < books.length; i++) { %>
              <tr>
                <th scope="row"><%= i + 1 %></th>
                <td><%= books[i].title %></td>
                <td><%= books[i].author %></td>
                <td>
                  <div class="btn-group" role="group">
                    <form action="/<%= books[i].id %>" method="GET">
                      <button type="submit" class="btn btn-warning">Edycja</button>
                    </form>
                    <div class="mx-2"></div>
                    <form action="/<%= books[i].id %>?_method=DELETE" method="post">
                      <button type="submit" class="btn btn-danger">Usuń</button>
                   </form>
                   
                  </div>
                </td>
              </tr>
              <% } %>
            </tbody>
          </table>
        </div>
  
        <div class="col-md-6">
          <h2>Dodaj książkę</h2>
          <form action="/" method="post">
            <div class="mb-3">
              <label class="form-label">Nazwa ksiązki</label>
              <input type="text" class="form-control" id="title" name="title">
              </div>
            <div class="mb-3">
              <label class="form-label">Autor ksiązki</label>
              <input type="text" class="form-control" id="author" name="author">
            </div>
            <button type="submit" class="btn btn-primary">Dodaj</button>
          </form>
        </div>
      </div>
    </div>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
  </body>
</html>
